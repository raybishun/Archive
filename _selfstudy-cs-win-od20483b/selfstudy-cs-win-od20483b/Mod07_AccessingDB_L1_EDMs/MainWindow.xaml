<Window x:Class="Mod07_AccessingDB_L1_EDMs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod07_AccessingDB_L1_EDMs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="customerList" HorizontalAlignment="Left" Height="255" VerticalAlignment="Top" Width="259" Margin="21,88,0,0" SelectionChanged="customerList_SelectionChanged"/>
        <Button x:Name="btnGetData" Content="Get Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="45,30,0,0" Click="btnGetData_Click"/>
        <Button x:Name="btnReadModify" Content="Read &amp; Modify" HorizontalAlignment="Left" VerticalAlignment="Top" Width="103" Margin="205,29,0,0" Click="btnReadModify_Click"/>
        <Button x:Name="btnQueryData" Content="Query Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="345,29,0,0" Click="btnQueryData_Click"/>
        <TextBox x:Name="details" HorizontalAlignment="Left" Height="255" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="268" Margin="328,88,0,0"/>

    </Grid>
</Window>
