        <TextBox x:Name="txtAmt" HorizontalAlignment="Left" Height="23" Margin="131,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="707" Margin="10,10,0,0"/>
        <Label x:Name="lblMortgageAmt" Content="Mortgage Amt" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.825,3.474" Margin="38,111,0,0"/>

    </Grid>
</Window>
