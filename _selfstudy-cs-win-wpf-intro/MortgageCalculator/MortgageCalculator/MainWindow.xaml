        xmlns:local="clr-namespace:MortgageCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Mortgage Calculator" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.825,3.474" Margin="26,20,0,0" FontSize="24"/>
        <Label x:Name="lblPeriod" Content="Period" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.825,3.474" Margin="488,112,0,0"/>
